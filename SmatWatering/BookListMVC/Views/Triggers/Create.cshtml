@model BookListMVC.Models.Trigger

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-info">Trigger</h1>

<hr />

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow mb-4  ">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Set range value</h6>
                </div>
                <div class="card-body">
                    <div class="row ">
                        <form asp-action="Create" class="col-12 justify-content-center">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group row justify-content-center">
                                <label asp-for="VariableId" class="control-label col-4 border border-0"></label>
                                <select asp-for="VariableId" id="Variable" class="form-control col-5">
                                </select>
                                <span asp-validation-for="VariableId" class="text-danger"></span>
                            </div>

                            <div class="form-group row justify-content-center">
                                <label asp-for="Description" class="control-label col-4"></label>
                                <input asp-for="Description" value="Description" class="form-control col-5" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group row justify-content-center">
                                <label asp-for="min" class="control-label col-4"></label>
                                <input asp-for="min" value="0" class="form-control col-5" />
                                <span asp-validation-for="min" class="text-danger"></span>
                            </div>
                            <div class="form-group row justify-content-center">
                                <label asp-for="max" class="control-label col-4"></label>
                                <input asp-for="max" value="100" class="form-control col-5" />
                                <span asp-validation-for="max" class="text-danger"></span>
                            </div>
                           
                            <div class="form-group row justify-content-center">
                                <input type="submit" onclick="Noti('Schedule task', 'success')" value="Submit" class="btn btn-primary btn-icon-split btn-lg  col-3 " />
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/trigger.js"></script>
<script src="~/js/toatr.js"></script>

