@model IEnumerable<SmartWatering.Models.Schedule>

@{ ViewData["Title"] = "Index"; }

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800 text-info">Index</h1>

    <p class="mb-4">
        <a asp-action="Create">Create New</a>
    </p>
    
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.intervalType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TimeStart)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Interval)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Device)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PIN)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Variable)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.intervalType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TimeStart)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Interval)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Device)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PIN)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Variable)
                            </th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.intervalType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TimeStart)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Interval)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Device)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PIN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Variable)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>}

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
<script src="~/js/table/sb-admin-2.js"></script>
<script src="~/js/demo/datatables-demo.js"></script>