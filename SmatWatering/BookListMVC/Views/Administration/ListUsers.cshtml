@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "All User";
}

    <div class="m-3">
        <h1>All Users</h1>
        @if (Model.Any())
        {
            <a class="btn btn-primary mb-3" style="width:auto"
               asp-controller="Account" asp-action="Register">
                Add new user
            </a>
            foreach (var user in Model)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        User Id : @user.Id
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Full Name : @user.FirstName @user.LastName</h5>
                        <h5 class="card-title">Email : @user.Email</h5>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Administration" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                        <a asp-controller="Administration" asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="card">
                <div class="card-header">
                    No roles created yet
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        Use the button below to create a role
                    </h5>
                    <a class="btn btn-primary" style="width:auto"
                       asp-controller="Administration" asp-action="CreateRole">
                        Create Role
                    </a>

                </div>
            </div>
        }

    </div>