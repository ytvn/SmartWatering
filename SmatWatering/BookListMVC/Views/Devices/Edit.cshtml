@model BookListMVC.Models.Device

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Device</h4>
<hr />

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow mb-4  ">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary"></h6>
                </div>
                <div class="card-body">
                    <div class="row ">
                        <form asp-action="Edit" class="col-12 justify-content-center">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="DeviceId" />
                            <input type="hidden" asp-for="CreatedBy" />
                            <input type="hidden" asp-for="ReadAPIKey" />
                            <input type="hidden" asp-for="WriteAPIKey" />
                            <div class="form-group row justify-content-center">
                                <label asp-for="Name" class="control-label col-4"></label>
                                <input asp-for="Name" id="ChipId" class="form-control col-5">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div> 
                            <div class="form-group row justify-content-center">
                                <label asp-for="ChipId" class="control-label col-4"></label>
                                <input asp-for="ChipId" id="ChipId" class="form-control col-5">
                                <span asp-validation-for="ChipId" class="text-danger"></span>
                            </div>
                            <div class="form-group row justify-content-center">
                                <label asp-for="Description" class="control-label col-4"></label>
                                <input asp-for="Description" id="Description" class="form-control col-5">
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group row justify-content-center">
                                <input type="submit" value="Save" class="btn btn-primary btn-icon-split btn-lg  col-3 " />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
