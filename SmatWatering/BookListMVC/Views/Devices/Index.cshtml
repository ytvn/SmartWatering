@model IEnumerable<BookListMVC.Models.Device>

@{ ViewData["Title"] = "Index"; }

<!-- Begin Page Content -->
<div class="container-fluid">

    <div class="row">
        <div class="col-6">
            <h2 class="h3 mb-2 text-gray-800 text-info">List of devices </h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary text-white" asp-controller="Devices" asp-action="Create"><i class="fas fa-plus"></i> &nbsp; Create New Device </a>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>  
                            <th>
                                @Html.DisplayNameFor(model => model.ChipId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ReadAPIKey)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.WriteAPIKey)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedDate)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-controller="DevicePins" asp-action="Index" asp-route-id="@item.ChipId"> @Html.DisplayFor(modelItem => item.Name)</a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ChipId)
                                </td> 
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReadAPIKey)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.WriteAPIKey)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedDate)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.DeviceId"><i style="margin-right : 5px" class="text-info fas fa-pen fa-lg"></i> </a> |
                                    <a asp-action="Details" asp-route-id="@item.DeviceId"><i style="margin-right : 5px" class="text-warning fas fa-info-circle fa-lg"></i> </a> |
                                    <a onclick='Delete("/Devices/Delete/@item.DeviceId" ,false)'> <i style="margin-left : 5px" class="text-danger fas fa-trash fa-lg"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section Scripts{
    <script src="~/js/toatr.js"></script>
    <script src="~/js/demo/datatables-demo.js"></script>
}