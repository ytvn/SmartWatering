@model BookListMVC.Models.Device

@{
    ViewData["Title"] = "Edit";
}

<h2 class="h3 mb-2 text-gray-800 text-info">Details of device </h2>
<hr />


<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow mb-4  ">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary"></h6>
                </div>
                <div class="card-body">
                    <div class="row ">
                        <form asp-action="Edit" class="col-12 justify-content-center">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group row justify-content-center">
                                <label asp-for="DeviceId" class="control-label col-4"></label>
                                <input asp-for="DeviceId" class="form-control col-5" readonly>
                                <span asp-validation-for="DeviceId" class="text-danger"></span>
                            </div>
                            <div class="form-group row justify-content-center">
                                <label asp-for="Name" class="control-label col-4"></label>
                                <input asp-for="Name" class="form-control col-5" readonly>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group row justify-content-center">
                                <label asp-for="ChipId" class="control-label col-4"></label>
                                <input asp-for="ChipId" class="form-control col-5" readonly>
                                <span asp-validation-for="ChipId" class="text-danger"></span>
                            </div>
                            <div class="form-group row justify-content-center">
                                <label asp-for="Description" class="control-label col-4"></label>
                                <input asp-for="Description" class="form-control col-5" readonly>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group row justify-content-center">
                                <label asp-for="ReadAPIKey" class="control-label col-4"></label>
                                <input asp-for="ReadAPIKey" class="form-control col-5" readonly>
                                <span asp-validation-for="ReadAPIKey" class="text-danger"></span>
                            </div>
                            <div class="form-group row justify-content-center">
                                <label asp-for="WriteAPIKey" class="control-label col-4"></label>
                                <input asp-for="WriteAPIKey" class="form-control col-5" readonly>
                                <span asp-validation-for="WriteAPIKey" class="text-danger"></span>
                            </div>
                            <div class="form-group row justify-content-center">
                                <label asp-for="CreatedDate" class="control-label col-4"></label>
                                <input asp-for="CreatedDate" class="form-control col-5" readonly>
                                <span asp-validation-for="CreatedDate" class="text-danger"></span>
                            </div>
                            <div class="form-group row justify-content-center">
                                <label asp-for="UpdatedDate" class="control-label col-4"></label>
                                <input asp-for="UpdatedDate" class="form-control col-5" readonly>
                                <span asp-validation-for="UpdatedDate" class="text-danger"></span>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

