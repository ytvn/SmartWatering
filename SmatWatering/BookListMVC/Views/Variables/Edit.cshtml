@model VariableView

@{
    ViewData["Title"] = "Edit";
    var Values = (List<DevicePin>)ViewBag.Values;
    var ChipIds = Values.Select(c => c.chipId).Distinct().ToList();

}

<h1>Edit</h1>

<h4>Variable</h4>
<hr />

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow mb-4  ">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary"></h6>
                </div>
                <div class="card-body">
                    <div class="row ">
                        <form asp-action="Edit" class="col-12 justify-content-center">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="VariableId" />
                            <div class="form-group row justify-content-center">
                                <label asp-for="VariableName" class="control-label col-4"></label>
                                <input asp-for="VariableName" id="VariableName" class="form-control col-5">
                                <span asp-validation-for="VariableName" class="text-danger"></span>
                            </div>
                            <div class="form-group row justify-content-center">
                                <label asp-for="ChipId" class="control-label col-4"></label>
                                <select asp-for="ChipId" class="form-control col-5" onchange="Load()">
                                    @{foreach (var e in ChipIds)
                                        {
                                            <option value="@e">@e</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="ChipId" class="text-danger"></span>
                            </div>
                            <div class="form-group row justify-content-center">
                                <label asp-for="PIN" class="control-label col-4"></label>
                                <select asp-for="PIN" class="form-control col-5"></select>
                                <span asp-validation-for="PIN" class="text-danger"></span>
                            </div>
                            <div class="form-group row justify-content-center">
                                <input type="submit" value="Save" class="btn btn-primary btn-icon-split btn-lg  col-3 " />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script src="~/js/Load.js"></script>
